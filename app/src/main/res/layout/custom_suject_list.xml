<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        >

       <RelativeLayout
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:id="@+id/imageViewLayout"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:background="@drawable/shape_subject_image">

           <android.support.v7.widget.AppCompatImageView
               android:id="@+id/imageView"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               app:srcCompat="@drawable/ic_science_bg"
               />
       </RelativeLayout>


        <TextView
            android:id="@+id/subjectNameTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewLayout"
            android:text="Exam Name"
            android:singleLine="false"
            android:textColor="#2d2d2d"
            android:textSize="16dp"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/chapterCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageViewLayout"
            android:layout_below="@+id/subjectNameTV"
            android:text="Paper count"
            android:textColor="#c8c8c8"
            android:textSize="12dp"
            android:layout_marginTop="6dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>