<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.urexamhelp.ncertpro.OTPActivity"
    android:background="@drawable/gradient">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:minHeight="100dp"
        android:padding="20dp"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Great! Please enter your phone number"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp">

            <TextView
                android:id="@+id/youtPhoneNumbrTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="Your Phone Number"
                android:textColor="#66000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/youtPhoneNumbrTV"
                android:layout_marginTop="11dp"
                android:textSize="20dp"
                android:hint="10 Digit Phone Number"
                android:inputType="number"
                android:maxLength="10"
                android:paddingHorizontal="10dp"
                android:shadowColor="#1e000000"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/otpTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/Phone"
                android:layout_marginTop="0dp"
                android:text="AN OTP WILL BE SENT"
                android:textColor="#66000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/otpTV"
                android:layout_marginTop="60dp"
                android:background="@drawable/grade_button_shape"
                android:text="SUBMIT"
                android:textColor="#ffffff" />


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>